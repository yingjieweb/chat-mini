.chatroom {
  border: 1px solid #ccc;
  height: calc(100vh - 120rpx);
  padding: 40rpx;
  box-sizing: border-box;
}

.chatroom .item {
  display: flex;
  margin-top: 32rpx;
}

.chatroom .avatar {
  width: 80rpx;
  height: 80rpx;
  border-radius: 8rpx;
}

.chatroom .content {
  flex: 1;
  margin: 0 40rpx 0 40rpx;
  position: relative;
}

.chatroom .content::before {
  position: absolute;
  left: -30rpx;
  top: 50%;
  transform: translateY(-50%);
  content: '';
  width: 0;
  height: 0;
  border: 16rpx solid transparent;
  border-right-color: #fff;
}

.chatroom .content text {
  background: #fff;
  padding: 20rpx;
  display: inline-block;
  border-radius: 8rpx;
}

.footer view {
  display: flex;
  align-items: center;
  height: 120rpx;
  background: #f5f5f5;
}

.footer .avatar {
  height: 60rpx;
  width: 60rpx;
  border-radius: 8rpx;
  margin: 0 40rpx;
}

.footer input {
  background: #fff;
  height: 100rpx;
  border-radius: 8rpx;
  flex: 1;
}

.footer .send {
  width: 120rpx;
  padding: 0;
  display: flex;
  align-items: center;
  justify-content: center;
}